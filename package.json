{
  "name": "skaflo",
  "version": "1.0.0",
  "description": "Clean folder structures. Zero boilerplate. Create organized project directories without any files - perfect for developers who want structure without assumptions.",
  "main": "dist/index.js",
  "bin": {
    "skaflo": "dist/index.js"
  },
  "packageManager": "pnpm@9.12.0",
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=8.0.0"
  },
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "test": "jest --passWithNoTests",
    "test:coverage": "jest --coverage --passWithNoTests",
    "lint": "eslint",
    "lint:fix": "eslint src/**/*.ts --fix",
    "format": "prettier --write src/**/*.ts",
    "prepare": "husky install",
    "preinstall": "npx only-allow pnpm"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/QuayeDNA/skaflo.git"
  },
  "keywords": [
    "cli",
    "scaffold",
    "folder-structure",
    "project-generator",
    "directory-structure",
    "react",
    "typescript",
    "project-setup",
    "folder-generator",
    "project-scaffolding",
    "development-tools",
    "project-organization",
    "structure-generator",
    "frontend-tools",
    "developer-tools"
  ],
  "author": "QuayeDNA <quayedna@example.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/QuayeDNA/skaflo/issues"
  },
  "homepage": "https://github.com/QuayeDNA/skaflo#readme",
  "dependencies": {
    "chalk": "^5.6.2",
    "commander": "^14.0.1",
    "fs-extra": "^11.3.2",
    "inquirer": "^12.9.6",
    "joi": "^18.0.1",
    "ora": "^9.0.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.36.0",
    "@types/commander": "^2.12.5",
    "@types/fs-extra": "^11.0.4",
    "@types/inquirer": "^9.0.9",
    "@types/jest": "^30.0.0",
    "@types/node": "^24.5.2",
    "@typescript-eslint/eslint-plugin": "^8.44.1",
    "@typescript-eslint/parser": "^8.44.1",
    "eslint": "^9.36.0",
    "husky": "^9.1.7",
    "jest": "^30.1.3",
    "prettier": "^3.6.2",
    "ts-jest": "^29.4.4",
    "typescript": "^5.9.2",
    "typescript-eslint": "^8.44.1"
  }
}
